<div class="content" style="margin-left: 30%;margin-top:1%;">
    <div class="col-md-8">
        {{#if success_msg}}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
            <strong>{{success_msg}}</strong>
        </div>
        {{/if}}
        {{#if error_msg}}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
            <strong>{{error_msg}}</strong>
        </div>
        {{/if}}
    </div>
    <div class="container text-align-center">
        <h2 style="color: red;">{{viewTitle}}</h2>
        <form method="POST">
            <input type="hidden" name="_id" value="{{admin._id}}">

            <div class="form-group">
                <label>Username</label>
                <input id="username" type="text" class="form-control" name="username" required autofocus required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="email" type="email" class="form-control" name="email" value="{{admin.email}}" required
                    autofocus required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input id="password" type="password" class="form-control" name="password" value="{{admin.password}}"
                    required data-eye required>
            </div>
            <div class="form-group">
                <label>Shop Name</label>
                <input type="text" class="form-control" name="shopName" value="{{ShopDetail.shopName}}" required
                    data-eye required>
            </div>
            <div class="form-group">
                <label>Shop Address</label>
                <input type="text" class="form-control" name="shopAddress" value="{{ShopDetail.shopAddress}}" required
                    data-eye required>

            </div>
            <div class="form-group">
                <label>Shop Owner</label>
                <input type="text" class="form-control" name="shopOwner" value="{{ShopDetail.shopOwner}}" required
                    data-eye required>

            </div>


            <button type="submit" class="btn btn-primary show-alert">Submit</button>
        </form>

    </div>

</div>