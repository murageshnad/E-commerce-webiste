<div class="content" style="margin-left: 30%;margin-top:7%;">
    <div class="container text-align-center">
        <h2 style="color: red;">{{viewTitle}}</h2>
        <form action="/home" method="POST">
            <input type="hidden" name="_id" value="{{admin._id}}">
            <div class="form-group">
                <label>Email</label>
                <input id="email" type="email" class="form-control" name="email" value="{{admin.email}}" required
                    autofocus required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input id="password" type="password" class="form-control" name="password" value="{{admin.password}}"
                    required data-eye required>
            </div>
            <div class="mt-4 text-center">
                Don't have an account? <a href="/login/register" style="color: blue;">Create One</a>
            </div>

            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>

</div>