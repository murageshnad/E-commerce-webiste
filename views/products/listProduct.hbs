<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- Sidebar  -->
<nav id="sidebar">
    <div class="sidebar-header">

        <a href="/home/index">
            <h3>Admin Dashboard</h3>
        </a>


    </div>

    <ul class="list-unstyled components">
        <li class="active">
            <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                <i class="fas fa-home"></i>
                Products
            </a>
            <ul class="collapse list-unstyled" id="homeSubmenu">
                <li>
                    <a href="/home/addProduct">Add product</a>
                </li>
                <li>
                    <a href="/home/listProduct">View All Products</a>
                </li>
                <li>
                    <a href="/home/sold">View Sold Products</a>
                </li>

            </ul>
        </li>


    </ul>


</nav>


<div id="content">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a href="/home/logout">
                <p style="color:black;float:right;">LOG OUT</p>
            </a>

            <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <i class="fas fa-align-justify"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item active">
                        {{!-- <a class="nav-link" href="/login">Log out --}}

            </div>


        </div>
    </nav>
    <div class="content">
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span> Add Product</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form action="" method="POST" id="addProductForm">
                            <input type="hidden" name="_id" value="{{Product._id}}">
                            <div class="form-group">
                                <label>Product Name</label>
                                <input id="title" type="text" class="form-control" name="title"
                                    value="{{Product.title}}" required autofocus required>
                            </div>
                            <div class="form-group">
                                <label>Product Price</label>
                                <input id="price" type="text" class="form-control" name="price"
                                    value="{{Product.price}}" required data-eye required>
                            </div>
                            <div class="form-group">
                                <label> Image URL</label>
                                <input type="text" class="form-control" name="imagePath" id="imagePath"
                                    value="{{Product.imagePath}}" required>
                            </div>
                            <button type="submit" class="btn btn-primary addProduct"
                                data-type="{{Product._id}}">Submit</button>
                        </form>
                    </div>

                </div>

            </div>
        </div>
        <!--close first modal-->
        <div class="modal fade editModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span>Update Product</h4>
                    </div>
                    <div class="modal-body contents" style="padding:40px 50px;">

                    </div>

                </div>

            </div>
        </div>
        <p>{{viewTitle}}</p>
        <button type="submit" id="addProduct" class="btn btn-primary " style="float: right;margin-top:-5%;">Add a
            product</button>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="color: brown;">Product Name</th>
                    <th style="color: brown;">Price</th>
                    <th style="color: brown;">Product Image</th>



                </tr>
            </thead>
            <tbody>
                {{#each listProduct}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.imagePath}}</td>

                    <td>

                        <a href="" class="editaddProduct" data-type="{{this._id}}"><i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="/home/listProduct/{{this._id}}"
                            onclick="return confirm('Are you sure to delete this record ?');"><i
                                class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>


    </div>







</div>