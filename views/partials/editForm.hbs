<form action="" method="POST" class="editProductForm" enctype="multipart/form-data">
    <input type="hidden" name="_id" id="_id" value="{{Product._id}}">
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" name="product" value="{{Product.productName}}" id="product" required
            autofocus required>
    </div>
    <div class="form-group">
        <label>Product Price</label>
        <input type="text" class="form-control" name="price" value="{{Product.productPrice}}" id="price" required
            data-eye required>
    </div>
    <div class="form-group">
        <label for="exampleFormControlFile1"> Choose Product Image</label>
        <small style="visibility: hidden;">Previous Image:{{Product.image}} </small>
        <p>Update Image: <img id="output" src="" width="100" /></p>

        <input type="file" class="form-control-file" name="imagepath" id="imagepath" value="{{Product.fileName}}"
            onchange="loadFile(event)">
    </div>
    <button type="submit" id="addingProduct" class="btn btn-primary">Submit</button>
</form>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };

</script>