<form action="" method="POST" id="editProductForm">
    <input type="hidden" name="_id" id="_id" value="{{Product._id}}">
    <div class="form-group">
        <label>Product Name</label>
        <input id="titles" type="text" class="form-control" name="titles" value="{{Product.title}}" required autofocus
            required>
    </div>
    <div class="form-group">
        <label>Product Price</label>
        <input id="prices" type="text" class="form-control" name="prices" value="{{Product.price}}" required data-eye
            required>
    </div>
    <div class="form-group">
        <label> Image URL</label>
        <input type="text" class="form-control" name="Paths" id="Paths" value="{{Product.imagePath}}" required>
    </div>
    <button type="submit" class="btn btn-primary update" data-type="{{Product._id}}">Submit</button>
</form>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };

</script>